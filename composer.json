{
    "name": "mile23/drupal-merge-plugin",
    "description": "Dependency discovery for Drupal contrib projects.",
    "type": "plugin",
    "extra": {
        "class": "Mile23\\DrupalMerge\\MergePlugin"
    },
    "license": "GPL-2.0",
    "require": {
        "composer-plugin-api": "~1.0",
        "wikimedia/composer-merge-plugin": "~1.3",
        "drupal/core": "~8.0@dev"
    },
    "require-dev": {
        "composer/composer": "1.0.*@dev",
        "phpunit/phpunit": "~4.0",
        "mikey179/vfsStream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Mile23\\DrupalMerge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mile23\\DrupalMerge\\Test\\": "tests/"
        }
    },
    "scripts": {
      "test": "phpunit"
    }
}
